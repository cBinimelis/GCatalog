<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm ="using:GCatalog.ViewModels"
			 xmlns:models="using:GCatalog.Models"
			 Width="100"
             x:Class="GCatalog.Views.CategoryView"
			 x:DataType="vm:CategoryViewModel">
	
	<ListBox x:Name="catList" Background="White" ScrollViewer.VerticalScrollBarVisibility="Hidden">
		<ListBox.ItemTemplate>
			<DataTemplate DataType="{x:Type models:Category}">
				<Button Background="CadetBlue" Margin="0,-5"
						Width="80" HorizontalContentAlignment="Center"
						Content="{Binding Name}">
				</Button>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</UserControl>
